{
    "dimensions": [
        {"name" : "Project", "label" : "Project"},
        {"name" : "Type", "label" : "Type"},
        {"name" : "Status", "label" : "Status"},
        {"name" : "Priority", "label" : "Priority"},
        {"name" : "Resolution", "label" : "Resolution"},
        {"name" : "Assignee", "label" : "Assignee"},
        {"name" : "Reporter", "label" : "Reporter"},
        {"name" : "Creator", "label" : "Creator"},
        {"name" : "Created", "label" : "Created"},
        {"name" : "Labels", "label" : "Labels"},
        {"name" : "Affects_Versions", "label" : "Affects_Versions"},
        {"name" : "Fix_Versions", "label" : "Fix_Versions"},
        {"name" : "Components", "label" : "Components", "attributes": ["components"]},
        {"name" : "Epic_Link", "label" : "EpicLink"}
    ],
    "cubes": [
        {
            "name": "jira",
            "description" : "Issues from Jira model",
            "label": "U-QASAR Projects",
            "dimensions": [
                        "Project",
                        "Type",
                        "Status",
                        "Priority",
                        "Resolution",
                        "Assignee",
                        "Reporter",
                        "Creator",
                        "Created",
                        "Labels",
                        "Affects_Versions",
                        "Fix_Versions",
                        "Components",
                        "Epic_Link"
            ],
            "joins" :[
                  {
                    "master":"Issuekey",
                    "detail" : {
                          "table" : "jira_components",
                          "column" : "issue_key"
                    }
                  }
            ],
            "measures":[
                    {"name": "Business_Value"},
                    {"name": "Story_Points"},
                    {"name": "Original_Estimate"},
                    {"name": "Remaining_Estimate"},
                    {"name": "Time_Spent"}

            ],
            "aggregates": [
                    {
                        "name": "count",
                        "label" : "Issues",
                        "function": "count"
                    },
                    {
                        "name": "Time_Spent_avg",
                        "label": "Average TimeSpent",
                        "function": "avg",
                        "measure": "Time_Spent"
                    }
                ],
            "mappings": {
                    "Components" : {
                              "table" : "jira_components",
                              "column" : "components"
                    }
                     }
        }
    ]
}
